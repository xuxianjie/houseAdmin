/* component/login.wxss */
.login-box{
  position: absolute;
  z-index: 99999;
  left: 0;
    top: 0;
  width: 100%;
  height: 100%;
}
.login{
  padding: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  top: 50%;
  width: 500rpx;
  background-color: #fff;
}

.close-btn{
  padding: 10rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;

}
.logo{
  width: 150rpx;
  height: 150rpx;
  margin: 0 auto 30rpx;
}
.background{
  
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(50,50,50,.1);
}
.login-word{
  color: #666;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
.login-btn{
  height: 68rpx;
  border-radius: 35rpx;
  /* border-radius:  */
  overflow: hidden;
  background-color: #07c160;
  color: #fff;
  line-height: 68rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 5rpx 0 #07c160;
}
.login-btn::after{
  border: 0;
  border-radius: 0;
}