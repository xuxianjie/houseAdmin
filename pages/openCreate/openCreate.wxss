.container{
  padding:30rpx
}
.list{
  padding:20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.title{
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.item{
  width: 140rpx;
  height: 100rpx;
  margin-bottom: 30rpx;
  border-radius: 15rpx;
  background-color: rgba(13, 46, 10, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.item.active{
  background-color: #27800459;
}

.popup{
  border-radius: 20rpx;
  overflow: hidden;
}

.detail{
  width: 650rpx;
  padding: 20rpx ;
  font-size: 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.detail .name{
  margin-bottom: 25rpx;
  font-weight: 700;
  color: #000;
}
.detail .detail-item,
.detail .name{
  display: flex;
  align-items: center;
  height: 40rpx;
  margin-bottom: 20rpx;
}
.detail .rent view:first-of-type,
.detail .detail-item view:first-of-type
{
  width: 100rpx;
  text-align: right;
}
.special{
  border-bottom: 1rpx solid #160101;
  font-weight: 700;
  color:#278004;
  min-width: 90rpx;
  padding:0 10rpx;
  text-align: center;
  font-size: 30rpx;
}
.group{
  border: 1rpx solid #615e5e;margin-bottom: 20rpx;padding: 15rpx 15rpx 0 0; border-radius: 10rpx;
}
.symbol{
  padding:0 5rpx;
}
.all-price{
  margin-top: 60rpx;
  padding-right: 20rpx;
  justify-content: flex-end;
}
.all-price .special{
  color:red ;
  font-size: 36rpx;
  min-width: 180rpx;
  text-align: center !important;
}